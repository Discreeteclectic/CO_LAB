# CO_LAB CRM Backup System Configuration
# Copy this file to .env and configure the values for your environment

# Backup Configuration
BACKUP_DIR=./backups
BACKUP_RETENTION_DAILY=30
BACKUP_RETENTION_WEEKLY=12
BACKUP_RETENTION_MONTHLY=12

# Backup Schedules (Cron Format)
# Daily backup at 2 AM
BACKUP_DAILY_SCHEDULE="0 2 * * *"
# Weekly backup at 1 AM on Sunday
BACKUP_WEEKLY_SCHEDULE="0 1 * * 0"
# Monthly backup at midnight on 1st of month
BACKUP_MONTHLY_SCHEDULE="0 0 1 * *"
# Cleanup old backups at 3 AM daily
BACKUP_CLEANUP_SCHEDULE="0 3 * * *"

# Email Configuration for Backup Notifications
BACKUP_EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
BACKUP_EMAIL_FROM=your-email@gmail.com
BACKUP_EMAIL_TO=admin@yourcompany.com

# Timezone for scheduled backups
TZ=UTC