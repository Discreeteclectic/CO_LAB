{
  "name": "colab-crm-backend",
  "version": "1.0.0",
  "description": "CO_LAB CRM Backend API",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --verbose --runInBand",
    "test:watch": "jest --watch --verbose",
    "test:coverage": "jest --coverage --verbose --runInBand",
    "test:unit": "jest --testMatch='**/__tests__/unit/**/*.test.js'",
    "test:integration": "jest --testMatch='**/__tests__/integration/**/*.test.js'",
    "test:e2e": "jest --testMatch='**/__tests__/e2e/**/*.test.js'",
    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "db:seed": "node prisma/seed.js",
    "db:test:setup": "NODE_ENV=test npx prisma migrate reset --force && NODE_ENV=test npx prisma db push"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "archiver": "^7.0.1",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "fs-extra": "^11.2.0",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^3.0.5",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^4.2.1",
    "node-fetch": "^2.6.7",
    "nodemailer": "^6.9.13",
    "openai": "^5.16.0",
    "tar": "^7.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "nodemon": "^3.0.2",
    "prisma": "^5.7.1",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "crm",
    "warehouse",
    "calculator",
    "nodejs",
    "express"
  ],
  "author": "CO_LAB",
  "license": "MIT"
}
