# CO-LAB CRM Environment Configuration
# Copy this file to .env and update the values for your environment

# Server Configuration
NODE_ENV=production
PORT=8080

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production-min-32-chars
CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/colab_crm
# For development: postgresql://postgres:password@localhost:5432/colab_crm_dev

# Redis Configuration (for caching)
REDIS_URL=redis://localhost:6379
# For cloud Redis: redis://user:password@host:port

# SSL/HTTPS Configuration
HTTPS_ENABLED=false
SSL_KEY_PATH=/path/to/private-key.pem
SSL_CERT_PATH=/path/to/certificate.pem

# Logging
LOG_LEVEL=info
# Options: error, info, debug

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
# 10MB in bytes
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100
# Max requests per window

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-this-in-production
SESSION_MAX_AGE=86400000
# 24 hours in milliseconds

# Feature Flags
FEATURE_ANALYTICS=true
FEATURE_NOTIFICATIONS=true
FEATURE_EXPORT=true

# External API Keys
ANALYTICS_API_KEY=your-analytics-api-key
PAYMENT_API_KEY=your-payment-gateway-api-key

# Cloud Storage (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=colab-crm-files
AWS_REGION=us-east-1